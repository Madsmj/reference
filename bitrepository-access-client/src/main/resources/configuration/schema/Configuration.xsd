<!-- URLs in schema targetNamespace must be updated later -->
<schema xmlns="http://www.w3.org/2001/XMLSchema"
  xmlns:tns="http://bitrepository.org/access-client/Configuration.xsd"
  targetNamespace="http://bitrepository.org/access-client/Configuration.xsd"
  elementFormDefault="qualified">


  <element name="AccessConfiguration">
    <annotation>
      <documentation xml:lang="en">
        The full configuration for
        the access module
   </documentation>
    </annotation>
    <complexType>
      <sequence>
        <element name="fileDir" type="string">
          <annotation>
            <documentation xml:lang="en">
              The directory where
              the output files are placed.
 	    </documentation>
 	   </annotation>
 	  </element>
    <element name="queue" type="string">
     <annotation>
      <documentation xml:lang="en">
       The queue used by the GetFileClient for incoming communication.
      </documentation>
     </annotation>
    </element>
      <element name="GetFileIDsClientQueue" type="string">
       <annotation>
        <documentation xml:lang="en">
         The queue used by the GetFileIDsclient for incoming communication.
        </documentation>
       </annotation>
      </element>
      <element name="GetFileIDsClientTimeOut" type="string">
       <annotation>
        <documentation xml:lang="en">
         The time out used by the GetFileIDsclient.
        </documentation>
       </annotation>
      </element>
      <element name="GetFileIDsClientNumberOfPillars" type="string">
       <annotation>
        <documentation xml:lang="en">
         The number of pillars the client expect to get an answer from.
        </documentation>
       </annotation>
      </element>
 	  <!-- Content! -->
 	 </sequence>
 	</complexType>
 </element>
</schema>
