	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

	<modelVersion>4.0.0</modelVersion>
	<groupId>org.bitrepository</groupId>
	<version>0.0.1-SNAPSHOT</version>
	<artifactId>bitrepository</artifactId>

	<parent>
		<groupId>org.sbforge</groupId>
		<artifactId>SBForge-parent</artifactId>
		<version>5</version>
	</parent>

	<name>Bitrepository</name>

	<packaging>pom</packaging>

	<modules>
		<module>bitrepository-message-xml</module>
		<module>bitrepository-common</module>
		<module>bitrepository-protocol</module>
		<module>bitrepository-access-client</module>
		<module>bitrepository-modifying-client</module>
		<module>bitrepository-alarm-client</module>
		<module>bitrepository-integrity-client</module>
		<module>bitrepository-audit-client</module>
		<module>bitrepository-monitoring-service</module>
