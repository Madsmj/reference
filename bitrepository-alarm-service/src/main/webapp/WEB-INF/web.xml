<?xml version="1.0" encoding="UTF-8"?>
<web-app>
   	<display-name>Bitrepository alarmservice</display-name>
	
   	<servlet>
 		<servlet-name>Bitrepository-alarmservice</servlet-name>
 		<servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer</servlet-class>
		<init-param>
 			<param-name>com.sun.jersey.config.property.packages</param-name>
 			<param-value>org.bitrepository.alarm.alarmservice</param-value>
 		</init-param>
 	</servlet>
 	
 	<servlet-mapping>
 		<servlet-name>Bitrepository-alarmservice</servlet-name>
 		<url-pattern>/alarm/*</url-pattern>
 	</servlet-mapping>
 	
    <listener>
		<listener-class>org.bitrepository.alarm.alarmservice.ShutdownListener</listener-class>
	</listener>
 	
</web-app>


