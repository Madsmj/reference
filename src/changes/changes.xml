<document xmlns="http://maven.apache.org/changes/1.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/changes/1.0.0 http://maven.apache.org/xsd/changes-1.0.0.xsd">
  <properties>
    <title>Bitrepository webclient</title>
    <author email="ktc@statsbiblioteket.dk">Kim Christensen</author>
  </properties>
  <body>
    <release version="0.5.0" date="2011-11-21" description="New web UI added.">
      <action dev="Kim" type="add">
        New web-UI which is the new default.   
      </action>
    </release>
    <release version="0.6.0" date="2011-12-06" description="Update to new reference code version"></release>
    <release version="0.7.0" date="2012-01-04" description="Asynchronious clients and delete file">
      <action dev="Kim" type="Update">
        Change GetChecksums functionality to use a asynchronous calls, rather than the deprecated blocking variants.   
      </action>
      <action dev="Kim" type="add">
        Added real delete file functionality, supports delete file on a single pillar at a time. 
      </action>
      <action dev="Kim" type="add">
        Added functionality to see when a file has been uploaded to destination and link to download it from. 
      </action>
    </release>
    <release version="0.8.0" date="2012-01-04" description="Improvements">
      <action dev="Kim" type="update">
        Updated the putfile functionality to support checksums. 
      </action>
      <action dev="Kim" type="Add">
        Made service urls configurable. 
      </action>
      <action dev="Kim" type="Update">
        Updated the code to work with new event definitions. 
      </action>
      <action dev="Kim" type="Update">
        Update to message-xml 8. 
      </action>
    </release>
  </body>
</document>